SCHADENSTYPEN / DAMAGETYPES:

	Definitiert in /sys/combat.h
	Stand: Juli 2009

PHYSICAL_DAMAGE_TYPES: (werden bei Ruestungsberechnung beruecksichtigt)
	Schwertschlag                                  DT_SLASH
	stumpfe Waffen                                 DT_BLUDGEON
	Stichwaffen                                    DT_PIERCE
	Quetschung                                     DT_SQUEEZE
	Peitschenhieb                                  DT_WHIP
	saegende/reissende Waffen                      DT_RIP

MAGICAL_DAMAGE_TYPES:
	Feuer/Hitze (unabhaengig von ENV_TEMPERATURE)  DT_FIRE
	Eis/Kaelte (unabhaengig von ENV_TEMPERATURE)   DT_COLD
	Wasserschaden                                  DT_WATER
	elementarer Luftschaden                        DT_AIR
	elementarer Schaden Erde                       DT_EARTH
	Sturm                                          DT_STORM
	Ersticken                                      DT_CHOKE
	Blitz                                          DT_LIGHTNING
	Explosionen                                    DT_EXPLOSION
	Laerm                                          DT_SOUND
	(grelles) Licht                                DT_LIGHT
	Stromschlaege (z.B. von einem Zitteraal)       DT_ELECTRIC
	Saeure                                         DT_ACID
	Gift (unabhaengig von P_POISON)                DT_POISON
	Schrecken/Entsetzen                            DT_TERROR
	'Heiliger' Angriff                             DT_HOLY
	'unheiliger' Angriff                           DT_UNHOLY
	Gedankenangriff, Psi-Attacke                   DT_MIND
	Default-Schadenstyp fuer Spells                DT_MAGIC

